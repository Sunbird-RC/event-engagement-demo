{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "Quiz": {
      "$ref": "#/definitions/Quiz"
    }
  },
  "required": [
    "Quiz"
  ],
  "title": "Quiz",
  "definitions": {
    "Quiz": {
      "$id": "#/properties/Quiz",
      "type": "object",
      "title": "The Quiz Schema",
      "required": [
        "did",
        "title",
        "visitorName",
        "visitorMobileNumber",
        "exhibitDetails",
        "date"
      ],
      "properties": {
        "did": {
          "type": "string"
        },
        "title": {
          "type": "string",
          "title": "Title",
          "placeholder": "title"
        },
        "visitorName": {
          "type": "string",
          "title": "Visitor Name",
          "placeholder": "Visitor Name"
        },
        "visitorMobileNumber": {
          "type": "string",
          "title": "Visitor Contact",
          "placeholder": "Visitor Contact"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "exhibitOsid": {
          "type": "string"
        },
        "exhibitName": {
          "type": "string"
        },
        "exhibitOrganization": {
          "type": "string"
        },
        "score": {
          "type": "integer",
          "title": "Title"
        },
        "totalScore": {
          "type": "integer",
          "title": "Total Score"
        },
        "attemptCount": {
          "type": "integer",
          "default": 0
        },
        "badgeWon": {
          "type": "boolean",
          "default": false
        },
        "answers": {
          "type": "array",
          "title": "Answers",
          "items": {
            "type": "object",
            "properties": {
              "questionOsid": {
                "type": "string"
              },
              "question": {
                "type": "string",
                "title": "Question"
              },
              "answered": {
                "type": "string",
                "title": "Answered"
              },
              "correctAnswer": {
                "type": "string",
                "title": "Correct Answer"
              },
              "isCorrect": {
                "type": "boolean",
                "title": "Is Correct"
              }
            },
            "required": ["questionOsid", "isCorrect"]
          }
        }
      }
    }
  },
  "_osConfig": {
    "privateFields": [
      "$.quizConfig.answers[].correctAnswer"
    ],
    "ownershipAttributes": [],
    "roles": ["anonymous"],
    "inviteRoles": [
      "anonymous"
    ],
    "systemFields": [
      "osCreatedAt",
      "osUpdatedAt",
      "osCreatedBy",
      "osUpdatedBy"
    ],
    "enableLogin": false
  }
}
  